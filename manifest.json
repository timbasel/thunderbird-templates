{
  "manifest_version": 2,
  "name": "Templates",
  "description": "Thunderbird plugin to create per-account HTML templates for your emails",
  "version": "1.0.0",
  "author": "Tim Basel",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "templates@basel.digital",
      "strict_min_version": "102.0"
    }
  },
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "64": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "options_ui": {
    "page": "dist/options.html"
  },
  "permissions": [
    "accountsRead",
    "compose",
    "storage"
  ]
}